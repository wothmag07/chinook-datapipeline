# =============================================================================
# Airflow Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- GCP Configuration ---
PROJECT_ID=your-gcp-project-id
DB_NAME=chinook_db
GCP_SA_KEY_PATH=/absolute/path/to/your/gcp-service-account.json

# --- Airflow Core ---
AIRFLOW_UID=50000
AIRFLOW__CORE__FERNET_KEY=  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# --- Airflow Admin User ---
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=change-me-to-a-strong-password

# --- dbt Configuration (used inside containers) ---
DBT_BQ_PROJECT=your-gcp-project-id
DBT_BQ_KEYFILE=/keys/gcp-sa.json
